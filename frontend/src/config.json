  "activities": {
    "title": "Activities",
    "description": "The database has a large number of peptides with reported biological activity. We have ordered the activities in a hierarchical way, arranging from general activities (such as therapeutic, immunological or signal peptides) to more specific ones (such as anti-coronavirus or anti-HIV). In addition, we have analyzed the promiscuity of peptides to belong between groups.",
    "route": "/activities",
    "table_api": "/api/get_count_activities_table/",
    "plot_api": "/api/get_count_activities_plot/",
    "redirect": "/activity/",
    "tree_api": "/api/get_tree/"
  },

  "sources": {
    "title": "Sources",
    "description": "To populate the database, various sources of information about peptides were collected, such as repositories, smaller databases, as well as machine learning projects with known sequences. This large number of sources allows having a huge number of peptides reported in this application.",
